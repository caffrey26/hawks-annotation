<!DOCTYPE html>
<html>

<head>
  <link href="projects.scss" rel="stylesheet">
  </head>
  
  <%= flash[:success] %>
<div class="container">
    <div class="row">
        
        <div class="col-md-3">
            <h2><%= @project.title %> &nbsp;&nbsp;&nbsp;</h2>
        </div>
        
        <div class="pull-right">
            <%=link_to "+ Add Files", project_project_files_path(project_id = @project.id), class: "btn btn-primary" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <%=link_to "+ Add Questions", project_questions_path(project_id = @project.id), class: "btn btn-primary" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <%= if @project.admin_id == current_user.id then link_to "+ Add Users", show_and_select_user_path(@project), class: "btn btn-primary" end %>
        </div>
        
    </div>
    <h3 ><p class="fontstyle"><%= @project.description %></p></h3>
</div>
    

</br></br></br>

<div class="btn-group">
    <div class="container">
        <div class="row">
        
            <%= link_to "Back", projects_path, class: "btn btn-default" %> &nbsp;&nbsp;
        
            <%= link_to "Edit", edit_project_path(@project), class: "btn btn-info" %> &nbsp;&nbsp;
        
            <%= link_to "Delete", project_path(@project), method: :delete, data: {confirm: "Are you sure you want to delete this project?"}, class: "btn btn-danger" %>
        </div>
        </div>
    </div>
</div>
</br></br></br>  

</html>


