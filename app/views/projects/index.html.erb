<% if current_user.present? %>
  <h3> Your Projects </h3> 
    <% @adminprojects.each do |p| %>
      <h3><%= link_to p.title, project_path(p) %></h3>
      <p><%= p.description%></p>
    <% end %>
    </br>
  <% if @otherprojects.length > 0 %>  
    <h3> Projects you contribute to </h3>
      <% @otherprojects.each do |p| %>
        <h3><%= link_to p.title, project_path(p) %></h3>
        <p><%= p.description%></p>
      <% end %>
      </br>
  <% end %>
  </br>
  <%= link_to "+ Create New Project", new_project_path, class: "btn btn-primary" %>
    
<% else %>

  <h2>Welcome to Hawks Annotation! Sign in or sign up to continue</h2>
  <br>
  <%= image_tag("welcome_annotation.jpg", class:"img-responsive", size: "50%xauto") %>
  <!--<h2><%= @welcome %></h2>-->
  
<% end %>