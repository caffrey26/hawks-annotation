<!DOCTYPE html>

<html>  
<head>
 <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <!-- THIS LINE -->
    <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>



  <div class ="row">
    <div class="col-md-6">
    <%= form_tag(project_questions_path, method: :get) do %>
      <%= text_field_tag :term, params[:term] %>
      <%= submit_tag 'Search' %>
    <% end %>
    </div>
    <div class="col-md-5">
    <div class="pull-right">
  <%=link_to "+ Add a new question", new_project_question_path(project_id: params[:project_id]), class: "btn btn-primary" %>
    </div>
    </div>
  </div>
  
  <div class="container">
  <div class="row">
    <div class="col-md-5">
  <h3> Questions for  <%= link_to Project.find(params[:project_id]).title, project_path(id: params[:project_id]) %> </h3>
  </div>
  
  </div>
  </div>
</head>

<body>
  


  <div class="container">
    <div class="row">
      <ol>
        <% if @questions.empty? %>
          <h4> No questions created yet! </h4>
        <% else %>
        <% @questions.each do |p| %>
            <li><%= link_to p.title, project_question_path(id: p.id) %></li>
        <% end %>
      </ol>
    </div>
  </div>
  
  <% end %>
</body>

</html>

