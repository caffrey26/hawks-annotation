<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <h3>Question View:</h3>
      <%= render 'questions' %>
    </div>

  <div class="col-sm-8">
    <h3>File View:</h3>
    <div style="position: relative; z-index: 5000;">
      <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" id="filemenu-selector">
        <%= @file.file_name+" " %><span class="glyphicon glyphicon-chevron-down"></span>
        <span class="sr-only"></span>
      </button>
      <ul class="dropdown-menu" aria-labelledby="filemenu-selector">
        <% @files.each do |f| %>
            <li><%= link_to f.file_name, display_file_project_answers_path(file_id: f.id), remote: true %></li>
        <% end %>
      </ul>
      <div id="file_preview">
        <%= render partial: 'display_file' %>
      </div>
    </div>
  </div>
  </div>
</div>

