
<!DOCTYPE html>
<html>
  <head>
    
    <div class ="row">
    <div class="col-md-6">
    <%= form_tag(project_project_files_path, method: :get) do %>
      <%= text_field_tag :term, params[:term] %>
      <%= submit_tag 'Search' %>
    <% end %>
    </div>
    <div class="col-md-6">
        <div class="pull-right">
          <%=link_to "+ Add a new file", new_project_project_file_path(project_id: params[:project_id]), class: "btn btn-primary" %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        </div>
    </div>
    </div>
    </br>
    
    <div class="container">
      <div class="row">
        <div class="col-md-6">
        <h3 class="heading"> List of Files for <%= link_to Project.find(params[:project_id]).title, project_path(id: params[:project_id]) %> </h3>
        </div>
        
      </div>
    </div>
  </head>

    
  <% @project_files.each do |p| %>

      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <h3><%= link_to p.file_name, project_project_file_path(id: p.id) %>
            
            <div class="row">
              </br>
              
            <div  class="btn-group">
              <div class="col-md-3">
              <%= link_to "View", project_project_file_path(id: p.id), class: "btn btn-default" %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              </div>
              <div class="col-md-3">
              <%= link_to "Edit", edit_project_project_file_path(id: p.id), class: "btn btn-info" %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              </div>
              <div class="col-md-3">
              <%= link_to "Delete", project_project_file_path(id: p.id), method: :delete, data: {confirm: "Are you sure you want to delete this file?"}, class: "btn btn-danger" %>
              </div>
            </div>
            
            </div>
          </div>
          <div class="col-md-8">
            <p><%= p.description%></p>
          </div>
        </div>
      </div>
      
    </br>
    <% end %>
    </br>
    
</html>

    



