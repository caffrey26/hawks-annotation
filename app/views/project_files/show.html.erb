<!DOCTYPE html>
<html>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <h2 class="heading"><%= @project_file.file_name %></h2>
                <p>Created on <%= @project_file.created_at %></p>
            </div>
            <div class="col-md-7">
            <p><%= @project_file.description %></p>
            </div>
        </div>
    </div>
    
    </br></br>
    <%  if @project_file.attachment.file.nil? then %>
        <%= image_tag "No_File_Uploaded.png" %>
    <% else %>
        <div class="container">
            <iframe src=<%=  if @project_file.attachment.file.nil? then "no_file.png" else @project_file.attachment.url end %> width="900" height="350" style="border: none;"> </iframe>
        </div>
    <% end %>
    </br></br>
    
    <div class="container">
        <div  class="btn-group">
            <div class="row">
            
                <%= link_to "Back", project_project_files_path(params[:project_id]), class: "btn btn-default" %> &nbsp;
            
                <%= link_to "Edit", edit_project_project_file_path(id: @project_file.id), class: "btn btn-info" %> &nbsp;
            
                <%= link_to "Delete", project_project_file_path(id: @project_file.id), method: :delete, data: {confirm: "Are you sure you want to delete this file?"}, class: "btn btn-danger" %>
                
        </div> 
        </div>
    </div>
</br>
</br>

</html>